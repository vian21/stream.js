    "strict": true,
    "target": "ES6",
    "module": "commonjs",
    "checkJs": true,
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true
  },
  "include": ["./**/*.js"],
  "exclude": ["node_modules"]
}
